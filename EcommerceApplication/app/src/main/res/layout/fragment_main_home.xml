<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:id="@+id/fragment_container"
    tools:context=".fragments.MainHomeFragment">

    <TextView
        android:id="@+id/userText"
        android:layout_width="363dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/textviewforMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textviewforMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_ecommerce_app_n_a_place_to_find_what_you_love"
        android:textColor="@color/design_default_color_primary_variant"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnStart"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="@string/goexploretheapp"
        app:layout_constraintTop_toBottomOf="@+id/textviewforMain"/>

</androidx.constraintlayout.widget.ConstraintLayout>