<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="end"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizantalguideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizantalguideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizantalguideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizantalguideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizantalguideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalguideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalguideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalguideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <Button
        android:id="@+id/btnAc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline2"
        app:layout_constraintTop_toBottomOf="@+id/horizantalguideline1"
        app:layout_constraintEnd_toStartOf="@+id/verticalguideline1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/horizantalguideline1"
        app:layout_constraintStart_toEndOf="@+id/verticalguideline1"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline2"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline2"
        android:text="+/-"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btnPercentile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline1"
        app:layout_constraintStart_toEndOf="@id/verticalguideline2"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline2"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline3"
        android:layout_marginRight="5dp"
        android:text="%"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btnDivide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline1"
        app:layout_constraintStart_toEndOf="@id/verticalguideline3"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="/"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline2"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline3"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline2"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline3"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline2"
        app:layout_constraintStart_toEndOf="@id/verticalguideline1"
        android:text="2"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline2"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline3"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline3"
        app:layout_constraintStart_toEndOf="@+id/verticalguideline2"
        android:text="3"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline2"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline3"
        app:layout_constraintStart_toEndOf="@id/verticalguideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="*"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline3"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline4"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="4"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline3"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline4"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline2"
        app:layout_constraintStart_toEndOf="@id/verticalguideline1"
        android:text="5"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline3"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline4"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline3"
        app:layout_constraintStart_toEndOf="@+id/verticalguideline2"
        android:text="6"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline3"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline4"
        app:layout_constraintStart_toEndOf="@id/verticalguideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="-"
        tools:ignore="HardcodedText" />/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline4"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline5"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="7"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline4"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline5"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline2"
        app:layout_constraintStart_toEndOf="@id/verticalguideline1"
        android:text="8"
        android:layout_marginRight="5dp"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline4"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline5"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline3"
        app:layout_constraintStart_toEndOf="@+id/verticalguideline2"
        android:text="9"
        android:layout_marginRight="5dp"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btnAddition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline4"
        app:layout_constraintBottom_toTopOf="@+id/horizantalguideline5"
        app:layout_constraintStart_toEndOf="@id/verticalguideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btnZero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="0"
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btnDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/verticalguideline3"
        app:layout_constraintStart_toEndOf="@id/verticalguideline2"
        android:text="."
        tools:ignore="HardcodedText" />/>
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/horizantalguideline5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/verticalguideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="="
        tools:ignore="HardcodedText" />/>



</androidx.constraintlayout.widget.ConstraintLayout>